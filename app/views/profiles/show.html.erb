<div class='profile'>
<br>
<br>
Profile Name: <%= @user.name %>
<br>
<br>
Bio: <%= @user.bio %>
<br>
<br>
Languages:
<% if @languages.any? %>
<ul>
    <% @languages.each do |language| %>
    <li>
      <%= language.language_type %>
    </li>
    <% end %>
</ul>
  <% else %>

No Languages selected yet

<% end %>

<br>
<br>

<% if current_user %>
<% if params[:user_id] == current_user.id.to_s %>

<%= link_to 'Edit profile', edit_user_profile_path(current_user.id, current_user.profile.id) %>
<% end %>
<% end %>

</div>
