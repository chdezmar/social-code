<!DOCTYPE html>
<html>
  <head>
    <title>SocialCode</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <%= link_to 'Sign out', destroy_user_session_path, method: :delete %>
      <%= link_to 'Your profile', user_profile_path(current_user.id, current_user.profile.id)%>
        <% if LocationManager.where(user_id: current_user.id) != []%>
          You are checked into <%= LocationManager.find_by(user_id: current_user.id).place.name %>
          <%= link_to 'Check out', location_manager_path(LocationManager.find_by(user_id: current_user.id)), method: :delete %>
        <% end %>
    <% else %>
      <%= link_to 'Sign in', new_user_session_path %>
      <%= link_to 'Sign up', new_user_registration_path %>
      <% end %>

    <%= yield %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  </body>
</html>
